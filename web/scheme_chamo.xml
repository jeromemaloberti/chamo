<?xml version="1.0" encoding="UTF-8"?>

<style-scheme id="chamo" _name="Chamo" version="1.0">
  <author>Maxence Guesdon</author>
  <_description>Blue based color scheme, based on Cobalt source view theme</_description>

  <!-- Colors -->
  <color name="slate_blue"          value="#272740408B8B"/>
  <color name="white"               value="#FFFFFFFFFFFF"/>
  <color name="light_blue"          value="#0A96C43DF0B2"/>
  <color name="red"                 value="#FF0000"/>
  <color name="medium_blue"         value="#003b70"/>
  <color name="black_blue"          value="#000d1a"/>
  <color name="yellow"              value="#FFF100"/>
  <color name="yellow2"             value="#D3C8FFFF63FE"/>
  <color name="sea_green"           value="#00BF8C"/>
  <color name="slate_green"         value="#1DD3E31F3C8A"/>
  <color name="neon_pink"           value="#ffdd00"/>
  <color name="dark_yellow"         value="#DDE107"/>
  <color name="light_green"         value="#00FF00"/>
  <color name="bluish_grey"         value="#777777"/>
  <color name="dark_pink"           value="#FB262E23B48F"/>
  <color name="slate_yellow"        value="#FFFFF1040000"/>
  <color name="orange"              value="#FCCC912F0B33"/>
  <color name="sky_blue"            value="#3ECFFFFFF92B"/>

  <color name="teal_blue"                   value="#80ffbb"/>
  <color name="dark_blue"                   value="#001b33"/>
  <color name="pale_grey"                   value="#eeeeee"/>
  <color name="steel_grey"                  value="#333333"/>
  <color name="spring_green"                value="#3ad900"/>
  <color name="light_grey"                  value="#cccccc"/>
  <color name="dark_maroon"                 value="#002f29"/>
  <color name="steelblue3"                  value="#4f94cd"/>

  <!-- Global Settings -->

  <style name="text"                        foreground="white" background="slate_blue"/>
  <style name="selection"                   foreground="red" background="light_blue"/>
  <style name="cursor"                      foreground="white"/>
  <style name="current-line"                background="medium_blue"/>
  <style name="line-numbers"                foreground="light_blue" background="black_blue"/>
  <style name="draw-spaces"                 foreground="bluish_grey"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="yellow" background="black_blue"/>
  <style name="bracket-mismatch"            foreground="yellow" background="red" bold="true"/>

  <!-- Search Matching -->
  <style name="search-match"                foreground="white" background="sea_green"/>

  <!-- Bookmarks FIXME -->
  <style name="bookmark"                    background="white"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="slate_green" italic="true"/>
  <style name="def:shebang"                 foreground="light_blue" italic="true"/>
  <style name="def:doc-comment-element"     foreground="slate_green" italic="true" bold="true"/>

  <!-- Constants and Variables-->
  <style name="def:constant"                foreground="dark_pink"/>
  <style name="def:string"                  foreground="yellow2"/>
  <style name="def:base-n-integer"          foreground="red"/>
  <style name="def:number"                  foreground="red"/>
  <style name="def:decimal"                 foreground="red"/>

  <style name="def:floating-point"          foreground="neon_pink"/>

  <style name="def:special-char"            foreground="light_green"/>
  <style name="def:special-constant"        foreground="light_green" bold="true"/>

  <style name="def:keyword"                 foreground="slate_yellow" bold="true"/>
  <style name="def:builtin"                 foreground="light_grey" bold="true"/>
  <style name="def:variable"                foreground="light_grey"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="light_grey"/>
  <style name="def:function"                use-style="def:identifier"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="light_grey"/>

  <!-- Types -->
  <style name="def:type"                    foreground="teal_blue"/>

  <!-- Others -->
  <style name="def:error"                   foreground="white" background="dark_maroon" bold="true"/>
  <style name="def:note"                    foreground="slate_green" italic="true" bold="true"/>
  <style name="def:net-address-in-comment"  foreground="teal_blue" italic="false" underline="true"/>
  <style name="def:preprocessor"            foreground="light_grey"/>

  <!-- Unknown? -->
  <style name="def:specials"                foreground="white" background="neon_pink"/>
  <style name="def:boolean"                 foreground="neon_pink"/>

  <!-- OCaml -->
  <style name="ocaml:exp-keyword"     foreground="orange" bold="true"/>
  <style name="ocaml:def-keyword"     foreground="slate_yellow" bold="true"/>
  <style name="ocaml:module"          foreground="sky_blue" bold="true"/>
  <style name="ocaml:string"          foreground="yellow2" bold="true"/>
  <style name="ocaml:label"           foreground="neon_pink"/>
  <style name="ocaml:poly-variant"    foreground="sky_blue" bold="true"/>
  <style name="ocaml:variant"         foreground="sky_blue" bold="true"/>
  <style name="ocaml:ident"           />


  <!-- C Styles -->
  <style name="c:preprocessor"              foreground="teal_blue" bold="true"/>
  <style name="c:included-file"             foreground="spring_green"/>
  <style name="c:common-defines"            foreground="sky_blue" bold="true"/>

  <!-- Diff Styles -->
  <style name="diff:ignore"                 foreground="bluish_grey"/>
  <style name="diff:added-line"             foreground="faded_yellow"/>
  <style name="diff:removed-line"           foreground="spring_green"/>
  <style name="diff:changed-line"           foreground="light_grey"/>
  <style name="diff:diff-file"              foreground="sky_blue" bold="true"/>
  <style name="diff:location"               foreground="sky_blue"/>
  <style name="diff:special-case"           foreground="neon_pink" bold="true"/>

  <!-- Ruby Styles -->
  <style name="ruby:module-handler"         foreground="teal_blue"/>
  <style name="ruby:symbol"                 foreground="neon_pink"/>
  <style name="ruby:regex"                  foreground="teal_blue"/>

  <!-- SH Styles -->
  <style name="sh:function"                 foreground="neon_pink"/>

  <!-- XML Styles -->
  <style name="xml:attribute-name"          foreground="light_grey"/>
  <style name="xml:element-name"            foreground="teal_blue"/>
  <style name="xml:entity"                  foreground="red"/>
  <style name="xml:processing-instruction"  bold="true"/>

  <!-- MySite Styles -->
  <style name="mysite:attribute-name"          foreground="light_grey"/>
  <style name="mysite:element-name"            foreground="teal_blue"/>
  <style name="mysite:entity"                  foreground="#blue"/>
  <style name="mysite:processing-instruction"  bold="true"/>
  <style name="mysite:fr"                  foreground="light_green"/>
  <style name="mysite:en"                  foreground="neon_pink"/>

</style-scheme>
